<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#28465e"
    android:orientation="vertical"
    android:layout_gravity="center">


    <TextView
        android:id="@+id/txt_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Please enter your details below"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:paddingTop="70dp" />


    <EditText
        android:id="@+id/edit_customername"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint=" Enter your name here"
        android:inputType="text"
        android:layout_margin="10dp"
        android:maxLength="30"
        android:background="@drawable/border_style_popup"
        android:textColor="#000000"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:imeOptions="flagNoExtractUi" />

    <EditText
        android:id="@+id/edit_customermobile"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint=" Enter your mobile number here"
        android:inputType="number"
        android:layout_margin="10dp"
        android:maxLength="10"
        android:background="@drawable/border_style_popup"
        android:textColor="#000000"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:imeOptions="flagNoExtractUi" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:weightSum="0.6"
        android:layout_margin="10dp">


        <Button
            android:id="@+id/button_submit"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/border_style_popup"
            android:clickable="true"
            android:text="Submit"
            android:textSize="30dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_weight="0.3" />

        <Button
            android:id="@+id/id_btn_cancel"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/border_style_popup"
            android:clickable="true"
            android:text="Cancel"
            android:textSize="30dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_weight="0.3" />


    </LinearLayout>

</LinearLayout>

