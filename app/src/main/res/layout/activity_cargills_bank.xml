<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#28465e"
    android:orientation="vertical"
    android:layout_gravity="center">


    <TextView
        android:id="@+id/txt_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Have you applied for your Cargills Bank Credit Card? Fill your details below and we will get in touch with you!"
        android:textColor="@android:color/white"
        android:textSize="27dp"
        android:textStyle="bold"
        android:paddingTop="40dp" />


    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint=" Enter your name here"
        android:inputType="text"
        android:layout_margin="10dp"
        android:maxLength="30"
        android:background="@drawable/border_style_popup"
        android:textColor="#000000"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:imeOptions="flagNoExtractUi" />

    <EditText
        android:id="@+id/mobileno"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint=" Enter your mobile number here"
        android:inputType="number"
        android:layout_margin="10dp"
        android:maxLength="10"
        android:background="@drawable/border_style_popup"
        android:textColor="#000000"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:imeOptions="flagNoExtractUi" />

    <EditText
        android:id="@+id/companyname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint=" Enter your company name here"
        android:inputType="text"
        android:layout_margin="10dp"
        android:maxLength="40"
        android:background="@drawable/border_style_popup"
        android:textColor="#000000"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:imeOptions="flagNoExtractUi" />

    <Spinner
        android:id="@+id/monthlysalary"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/border_style_popup"
        android:textColor="#000000"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:imeOptions="flagNoExtractUi" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:weightSum="0.6"
        android:layout_margin="10dp">


        <Button
            android:id="@+id/submit"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/border_style_popup"
            android:clickable="true"
            android:text="Submit"
            android:textSize="30dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_weight="0.3" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/border_style_popup"
            android:clickable="true"
            android:text="Cancel"
            android:textSize="30dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_weight="0.3" />


    </LinearLayout>

